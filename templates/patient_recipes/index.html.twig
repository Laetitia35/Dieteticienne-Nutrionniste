{% extends 'base.html.twig' %}

{% block title %}Recettes personnalisées{% endblock %}

{% block body %}

  <h3>Vos recettes personnalisées</h3>

  <div class="row">
  
    <div class="col-md-9">
      
        <div class="row recipe-container">
            
          {% for recipe in recipes %}
            {% if app.user.id == recipes %}
              <div class="col-md-4">
                <div class="recipe-item text-center">
                  <a href="{#{ path('app_recipe', {"slug": recipe.slug}) }#}"><img src="/images/{{ recipe.illustration }}" alt="{{ recipe.title }}" class="img-fluid"></a>
                  <h5>{{ recipe.title }}</h5>
                  <span>{{ recipe.description }}</span>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      
    </div>
  </div>

{% endblock %}
