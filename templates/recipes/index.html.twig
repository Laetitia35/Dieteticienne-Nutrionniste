{% extends 'base.html.twig' %}

{% block title %}Id√©es recettes{% endblock %}

{% block body %}

  <h3>Les recettes</h3>
  <div class="row">
  
    <div class="col-md-4">

      {{ form(form) }}
    </div>

    <div class="col-md-8">
      
        <div class="row recipe-container">
            
            {% for recipe in recipes %}
          
              <div class="col-md-4">
                <div class="recipe-item text-center">
                  <a href="{{ path('app_recipes', { 'slug': recipe.slug }) }}"><img src="/images/{{ recipe.illustration }}" alt="{{ recipe.title }}" class="img-fluid"></a>
                  <h5>{{ recipe.title }}</h5>
                  <span>{{ recipe.description }}</span>
                </div>
              </div>

            {% endfor %}
        </div>
      
    </div>
  </div>


{% endblock %}
