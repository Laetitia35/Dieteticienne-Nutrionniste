{% extends 'base.html.twig' %}

{% block title %}Id√©es recettes{% endblock %}

{% block body %}

  <div class="row">
  
    <div class="col-md-4">
      <h5 class="text-center">Filtrer</h5>
      {{ form(form) }}
    </div>

    <div class="col-md-8">
      
      <h3>Les recettes</h3>

        <div class="row recipe-container">
            {% for recipe in recipes %}
              <div class="col-md-4">
                <div class="recipe-item text-center">
                  <a href="{{ path('app_recipes', { 'slug': recipes.slug }) }}"><img src="/images/{{ recipes.illustration }}" alt="{{ recipes.title }}" class="img-fluid"></a>
                  <h5>{{ recipes.title }}</h5>
                  <span>{{ recipes.description }}</span>
                </div>
              </div>

            {% endfor %}
        </div>
      
    </div>
  </div>


{% endblock %}
