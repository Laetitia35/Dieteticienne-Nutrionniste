{% extends 'base.html.twig' %}

{% block title %}Idées recettes{% endblock %}

{% block body %}

  <h3>Les recettes</h3>

  <div class="row">
  
    <div class="col-md-4">
      <h5 class="text-center">Filtres</h5>
      {{ form(form) }}
    </div>

    <div class="col-md-8">
      
        <div class="row recipe-container">
            
          {% for recipe in recipes %}
  
              <div class="col-md-4">
                <div class="recipe-item text-center">
        <!--- Problème dans la route : affichage de la vue show détails de la recette (sans s) = recette/slug ok -->
                  <a href="{{ path('app_recipes', {"slug": recipe.slug}) }}"><img src="/images/{{ recipe.illustration }}" alt="{{      
                     recipe.title }}" class="img-fluid"></a>
                  <h5>{{ recipe.title }}</h5>
                  <span>{{ recipe.description }}</span>
                </div>
              </div>
  
          {% endfor %}
        </div>
      
    </div>
  </div>
{% endblock %}
