{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

    <h3>Mon compte</h3>

    <p class="text-center">Bienvenue dans votre compte <strong>{{ app.user.firstname }}.</strong><br/>
    C'est dans cet espace que vous allez pouvoir accéder à vos services personnalisés.</p><hr>

    {% if is_granted('ROLE_ADMIN') %}
     <div class="text-center">
        <h5 class="text-center">Vous êtes l'administrateur de ce compte :</h5>
        <a href="/admin"> Accéder au back office et gérer les fonctionnalités de votre site </a><br/>
        <a href="/inscription">Inscrire vos patients</a><br/>
     </div>
     <br>
    {% endif %}

   
    <div class="row">

        <div class="col-md-4">
            <div class="account-item text-center">
                 <a href="{{ path('app_account_password') }}">Modifier mon mot de passe</a>
                 <img src="{{ asset('images/mot_de_passe.jpg') }} ">
            </div>
        </div>

        <div class="col-md-4">
            <div class="account-item text-center">
                 <a href="{{ path('app_recipes') }}">Accéder à mes recettes personnaliser</a>
                 <img src="{{ asset('/images/recettes_img.png') }}" width="232px" height="122px">
            </div>
        </div>

        <div class="col-md-4">
            <div class="account-item text-center">
               <a href="{{ path('app_home_page', {'_fragment' :'avis'}) }}">Publier un avis</a><br>
               <img src="{{ asset('images/comment.png') }}"  width="232px" height="122px">
            </div>
        </div>

    </div>    
    
{% endblock %}
