{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

    <h3>Mon compte</h3>

    {% if is_granted('ROLE_ADMIN') %}
     <div class="text-center">
        <a href="/admin"> Vous êtes administrateur, accéder au back office</a><br/>
     </div>
    {% endif %}

    <p class="text-center">Bienvenue dans votre compte {{ app.user.firstname }}.<br/>
    C'est dans cet espace que vous allez pouvoir accéder à vos services personnalisés.</p><hr>

    <div class="row">

        <div class="col-md-4">
            <div class="account-item text-center">
                 <a href="{{ path('app_account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="account-item text-center">
                 <a href="{{ path('app_recipes') }}">Accéder à mes recettes personnaliser</a> 
            </div>
        </div>

        <div class="col-md-4">
            <div class="account-item text-center">
               <a href="{{ path('app_home_page', {'_fragment' :'avis'}) }}">Publier un avis</a>
            </div>
        </div>

    </div>    
    
{% endblock %}
